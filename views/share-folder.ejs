<%- include('layout', { body: `
    <h2>Share Folder</h2>
    <form action="/share-folder/<%= folder.id %>" method="POST">
      <label for="duration">Share Duration (e.g., 1d, 10d):</label>
      <input type="text" name="duration" id="duration" required>
      <button type="submit">Generate Link</button>
    </form>
    <% if (shareLink) { %>
      <p><strong>Shareable Link:</strong> <a href="<%= shareLink %>"><%= shareLink %></a></p>
    <% } %>
  ` }) %>
  